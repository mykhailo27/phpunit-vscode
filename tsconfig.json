{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "strict": true,
        "rootDir": ".",
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "typeAcquisition": {
        "enable": true
    }
}